<section class="editSection">
    <h3 class="card-header">Edit Post</h3>
    <form class="edit-post-form">
        <div class="editHeadings">
            <label for="post-title" class="form-label">Title</label>
        </div>
        <div class="editForms">
            <textarea name="post-title" type="text" class="form-input" />{{post.title}}</textarea>
        </div>
        
        <div class="editHeadings">
            <label class="form-label" for="content">Content</label>
        </div>
        <div class="editForms">
            <textarea name="content" type="text" class="form-input" />{{post.content}}</textarea>
        </div>
        
        <div class="editHeadings">
                <button type="submit" class="btn">Update Post</button>
                <button type="button" class="delete-post-btn btn">Delete Post</button>
            
        </div>
    </form>
</section>

{{> comments post.comments}}


<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
